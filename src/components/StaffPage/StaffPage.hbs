            <div class="staff-page__top__user-container_user-image-container__image-square">
                <img class="staff-page__top__user-container__user-image-container__image-square_img"
                     src="{{_Photo}}">
            </div>
        </div>
        <div class="staff-page__top__user-container__name-container">
            <span class="staff-page__top__user-container__name-container_span">{{_StaffName}}</span>
